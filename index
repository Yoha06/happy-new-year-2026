<script>
/* ================= FIREWORKS ================= */
const canvas = document.getElementById("canvas");
const ctx = canvas.getContext("2d");

canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

const fireworks = [];
const particles = [];

function random(min, max) {
  return Math.random() * (max - min) + min;
}

class Firework {
  constructor() {
    this.x = random(0, canvas.width);
    this.y = canvas.height;
    this.targetY = random(100, canvas.height / 2);
    this.speed = random(4, 6);
    this.exploded = false;
  }
  update() {
    this.y -= this.speed;
    if (this.y <= this.targetY && !this.exploded) {
      this.exploded = true;
      explode(this.x, this.y);
    }
  }
  draw() {
    ctx.fillStyle = "white";
    ctx.fillRect(this.x, this.y, 2, 10);
  }
}

class Particle {
  constructor(x, y) {
    this.x = x;
    this.y = y;
    this.radius = random(1, 3);
    this.speedX = random(-4, 4);
    this.speedY = random(-4, 4);
    this.life = 100;
    this.color = `hsl(${random(0, 360)},100%,60%)`;
  }
  update() {
    this.x += this.speedX;
    this.y += this.speedY;
    this.life--;
  }
  draw() {
    ctx.beginPath();
    ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
    ctx.fillStyle = this.color;
    ctx.fill();
  }
}

function explode(x, y) {
  for (let i = 0; i < 70; i++) particles.push(new Particle(x, y));
}

function animate() {
  ctx.fillStyle = "rgba(0,0,0,0.25)";
  ctx.fillRect(0, 0, canvas.width, canvas.height);

  if (Math.random() < 0.05) fireworks.push(new Firework());

  fireworks.forEach((fw, i) => {
    fw.update();
    fw.draw();
    if (fw.exploded) fireworks.splice(i, 1);
  });

  particles.forEach((p, i) => {
    p.update();
    p.draw();
    if (p.life <= 0) particles.splice(i, 1);
  });

  requestAnimationFrame(animate);
}
animate();

/* ================= TEXTO SECUENCIAL EN LOOP ================= */
const words = ["happy", "new", "year", "y2026"];
const elements = words.map(id => document.getElementById(id));
const byYoha = document.getElementById("byYoha");

function resetText() {
  elements.forEach(el => el.style.display = "none");
  byYoha.style.display = "none";
}

function playSequence() {
  resetText();
  setTimeout(() => elements[0].style.display = "block", 500);
  setTimeout(() => elements[1].style.display = "block", 1500);
  setTimeout(() => elements[2].style.display = "block", 2500);
  setTimeout(() => elements[3].style.display = "block", 3500);
  setTimeout(() => byYoha.style.display = "block", 5200);
}

/* repetir automÃ¡ticamente */
playSequence();
setInterval(playSequence, 9000);

/* ================= MÃšSICA ================= */
const music = document.getElementById("music");
document.body.addEventListener("click", () => {
  music.play();
  document.querySelector(".tap").style.display = "none";
}, { once: true });

window.addEventListener("resize", () => {
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
});
</script>

